{
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ClientId": "ingest-api-local",

    "Producer": {
      "EnableIdempotence": true,
      "Acks": "none",
      "LingerMs": 10,
      "BatchSize": 131072,
      "MessageTimeoutMs": 5000
    },

    "Topics": {
      "TelemetryRaw": "telemetry.raw.v1"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
