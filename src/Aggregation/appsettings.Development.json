{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "akka": {
    "loglevel": "DEBUG",
    "stdout-loglevel": "INFO",
    "actor": {
      "provider": "cluster"
    },
    "remote": {
      "dot-netty": {
        "tcp": {
          "hostname": "127.0.0.1",
          "port": 2551
        }
      }
    },
    "cluster": {
      "roles": [
        "aggregation"
      ],
      "seed-nodes": [
        "akka.tcp://aggregation-actor-system@127.0.0.1:2551"
      ],
      "downing-provider-class": "Akka.Cluster.SplitBrainResolver, Akka.Cluster",
      "split-brain-resolver": {
        "active-strategy": "keep-majority"
      },
      "sharding": {
        "number-of-shards": 10,
        "passivate-idle-entity-after": "5 m"
      }
    }
  },
  "Aggregation": {
    "Sharding": {
      "ShardCount": 10
    },
    "Hierarchy": {
      "DefaultSubstationId": "unknown-substation",
      "DefaultRegionId": "unknown-region",
      "SiteToSubstation": {
        "site-vancouver-mpl-1": "mpl",
        "site-vancouver-csq-1": "csq",
        "site-vancouver-dal-grauer-1": "dal-grauer",
        "site-vancouver-murrin-1": "murrin",
        "site-vancouver-sperling-1": "sperling",
        "site-vancouver-west-end-1": "west-end",
        "site-surrey-ingledow-1": "ingledow",
        "site-surrey-fleetwood-1": "fleetwood",
        "site-surrey-whalley-1": "whalley",
        "site-surrey-nicomekl-1": "nicomekl",
        "site-surrey-centre-1": "surrey-centre",
        "site-burnaby-horne-payne-1": "horne-payne",
        "site-burnaby-newell-1": "newell",
        "site-burnaby-barnard-1": "barnard",
        "site-burnaby-metrotown-1": "metrotown",
        "site-richmond-kidd-1-1": "kidd-1",
        "site-richmond-kidd-2-1": "kidd-2",
        "site-richmond-steveston-1": "steveston",
        "site-richmond-lulu-1": "lulu",
        "site-richmond-terminal-1": "richmond-terminal"
      },
      "SubstationToRegion": {
        "mpl": "vancouver",
        "csq": "vancouver",
        "dal-grauer": "vancouver",
        "murrin": "vancouver",
        "sperling": "vancouver",
        "west-end": "vancouver",
        "ingledow": "surrey",
        "fleetwood": "surrey",
        "whalley": "surrey",
        "nicomekl": "surrey",
        "surrey-centre": "surrey",
        "horne-payne": "burnaby",
        "newell": "burnaby",
        "barnard": "burnaby",
        "metrotown": "burnaby",
        "kidd-1": "richmond",
        "kidd-2": "richmond",
        "steveston": "richmond",
        "lulu": "richmond",
        "richmond-terminal": "richmond"
      }
    }
  },
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "ClientId": "aggregation-local",
    "Consumer": {
      "GroupId": "aggregation-consumer",
      "AutoOffsetReset": "earliest",
      "EnableAutoCommit": false,
      "MaxPollIntervalMs": 300000
    },
    "Producer": {
      "EnableIdempotence": true,
      "Acks": "all",
      "LingerMs": 10,
      "BatchSize": 131072,
      "MessageTimeoutMs": 5000
    },
    "Topics": {
      "TelemetryRaw": "telemetry.raw.v1",
      "AggregatesSite": "telemetry.agg.site.v1",
      "AggregatesSubstation": "telemetry.agg.substation.v1",
      "AggregatesRegion": "telemetry.agg.region.v1"
    }
  }
}
